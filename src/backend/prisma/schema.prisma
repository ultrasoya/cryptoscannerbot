generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id Int @id @default(autoincrement())
  telegramId BigInt @unique
  wallet String 
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

enum Chain {
  ETH
  BSC
  SOLANA
  POLYGON
}

enum AlertCondition {
  ABOVE
  BELOW
}

model Alert {
  id String @id @default(cuid())
  telegramId String
  chain Chain @default(ETH)
  tokenAddress String 
  symbol String? 
  targetPrice Float
  condition AlertCondition
  isActive Boolean @default(true)
  lastTriggered DateTime?
  createdAt DateTime @default(now())

  @@index([tokenAddress, isActive])
}
